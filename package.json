{
  "name": "zeal-ui",
  "version": "0.0.1",
  "packageManager": "pnpm@8.2.0",
  "description": "",
  "author": "chansee97",
  "license": "MIT",
  "keywords": [],
  "main": "index.js",
  "scripts": {
    "dev:play": "pnpm -C play dev --open",
    "dev:docs": "pnpm -C packages/docs dev",
    "lint": "eslint . --fix"
  },
  "dependencies": {
    "@vueuse/core": "^10.1.2",
    "@zeal-ui/components": "workspace:^",
    "@zeal-ui/hooks": "workspace:^"
  },
  "devDependencies": {
    "@chansee97/eslint-config-vue": "^0.2.0",
    "@chansee97/stylelint-config": "^0.2.0",
    "@types/node": "^20.1.4",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "eslint": "^8.38.0",
    "lint-staged": "^13.2.2",
    "sass": "^1.62.1",
    "simple-git-hooks": "^2.8.1",
    "stylelint": "^15.6.1",
    "typescript": "^5.0.4",
    "vue": "^3.3.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,,mjs,ts,tsx,json,,md,yml}": [
      "eslint --fix"
    ],
    "*.{css,scss,less,html}": [
      "stylelint --fix"
    ],
    "*.vue": [
      "eslint --fix",
      "stylelint --fix"
    ]
  }
